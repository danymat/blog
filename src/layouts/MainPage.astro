---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Socials from "../components/Socials.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import { Image } from "astro:assets";
import logo from "../../public/logo.png";
import "../base.css";

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    </head>
    <body
        class="space-y-2 flex flex-col w-full h-dvh text-text bg-base select-none"
    >
        <Header />

        <div
            class="p-5 flex justify-between sm:items-start items-center flex-col sm:flex-row overflow-hidden h-full"
        >
            <div class="flex flex-col pt-10 h-full">
                <Image
                    src={logo}
                    class="md:w-56 w-32 m-5 rounded-full shadow-iris bg-rose p-0.5"
                    alt="Danymat Profile"
                />
                <div
                    class="flex justify-center list-inside text-xl text-rose pt-2"
                >
                    <Socials />
                </div>
            </div>
            <div
                class="sm:w-3/4 ease-in duration-300 rounded flex flex-col h-full mr-4 shadow-overlay border border-overlay relative"
            >
                <div
                    class="text-muted absolute -top-3 px-2 bg-base left-2 text-sm rounded-full select-text"
                >
                    {title}
                </div>
                <div
                    class="pt-3 text-md text-justify flex flex-col space-y-2 overflow-hidden"
                >
                    <div
                        class="pt-2 overflow-y-scroll text-pretty break-words text-justify antialiased font-normal oldstyle-nums space-y-4 select-text px-6"
                    >
                        <slot />
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>
