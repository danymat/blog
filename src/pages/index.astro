---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import Terminal from "../components/Terminal.astro";
import Socials from "../components/Socials.astro";
---

<!doctype html>
<html lang="en" class="">
    <head>
        <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    </head>
    <body class="flex flex-col w-full h-dvh text-text bg-base">
        <Header title={SITE_TITLE} />
        <div
            class="p-5 flex justify-between sm:items-start items-center flex-col sm:flex-row overflow-hidden h-full"
        >
            <div class="flex flex-col pt-10 h-full">
                <img
                    src="logo.png"
                    class="md:w-64 w-32 m-5 rounded-full shadow-iris bg-rose p-0.5"
                />
                <div
                    class="flex justify-center list-inside text-xl text-rose pt-2"
                >
                <Socials />
                </div>
            </div>
            <Terminal />
        </div>
    </body>
</html>
