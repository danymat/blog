---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
---

<header
    class="flex flex-row items-center place-content-between space-x-3 bg-text  m-3 text-base p-2 rounded-xl"
>
    <a
        class="text-4xl border-gray-900 p-2 my-1 font-bold text-transparent bg-clip-text bg-gradient-to-r from-pine to-love"
        href="/">{SITE_TITLE}</a
    >
    <nav class="text-lg pr-3 space-x-2">
        <HeaderLink href="/blog">Posts</HeaderLink>
        <HeaderLink href="/CV.pdf">CV</HeaderLink>
        <HeaderLink class="hover:line-through">Portfolio</HeaderLink>
    </nav>
</header>
